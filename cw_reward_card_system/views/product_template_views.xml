<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_form_inherit_cw_reward" model="ir.ui.view">
        <field name="name">product.template.form.inherit.cw.reward</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="after">
                <group name="cw_customization_rewards">
                    <field name="cw_points_cost"  />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
