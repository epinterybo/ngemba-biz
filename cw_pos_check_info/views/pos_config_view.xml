<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_view_form_pos_check_info" model="ir.ui.view">
        <field name="name">res.config.view.form.inherit.point_of_sale.pos.check.info</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="allow_check_info">
                    <div class="o_setting_left_pane">
                        <field name="pos_allow_check_info"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_allow_check_info"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
